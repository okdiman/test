<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/tabCardView"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:background="@drawable/big_round_outline"
        app:cardCornerRadius="48dp">

        <ImageView
            android:id="@+id/tabImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            app:tint="@color/image_color"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tabTextView"
        fontPath="fonts/MarkProMedium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:textColor="@color/image_color"
        android:textSize="12sp"
        tools:ignore="MissingPrefix,SmallSp"
        tools:text="@tools:sample/cities" />

</LinearLayout>