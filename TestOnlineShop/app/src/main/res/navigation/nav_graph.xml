<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        tools:layout="@layout/main_fragment"
        android:name="com.skillbox.skillbox.testonlineshop.presentation.mainfragment.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_filterBottomSheetDialog"
            app:destination="@id/filterBottomSheetDialog" />
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        tools:layout="@layout/details_fragment"
        android:name="com.skillbox.skillbox.testonlineshop.presentation.detailsfragment.DetailsFragment"
        android:label="DetailsFragment" >
        <action
            android:id="@+id/action_detailsFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <dialog
        android:id="@+id/filterBottomSheetDialog"
        tools:layout="@layout/bottom_sheet_dialog"
        android:name="com.skillbox.skillbox.testonlineshop.presentation.mainfragment.FilterBottomSheetDialog"
        android:label="FilterBottomSheetDialog" />
    <fragment
        tools:layout="@layout/phones_fragment"
        android:id="@+id/phonesFragment"
        android:name="com.skillbox.skillbox.testonlineshop.presentation.mainfragment.PhonesFragment"
        android:label="PhonesFragment" />
    <fragment
        tools:layout="@layout/cart_fragment"
        android:id="@+id/cartFragment"
        android:name="com.skillbox.skillbox.testonlineshop.presentation.cartfragment.CartFragment"
        android:label="CartFragment" />
</navigation>