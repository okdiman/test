<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.skillbox.skillbox.contentprovider.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_addContactFragment"
            app:destination="@id/addContactFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.skillbox.skillbox.contentprovider.otherfragments.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/detail_fragment">
        <argument
            android:name="contact"
            app:argType="com.skillbox.skillbox.contentprovider.classes.Contact" />
        <action
            android:id="@+id/action_detailFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/addContactFragment"
        android:name="com.skillbox.skillbox.contentprovider.otherfragments.AddContactFragment"
        android:label="AddContactFragment"
        tools:layout="@layout/add_contact_fragment" >
        <action
            android:id="@+id/action_addContactFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>