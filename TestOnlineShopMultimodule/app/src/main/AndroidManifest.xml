<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skillbox.skillbox.testonlineshop">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".components.app.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_icon_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestOnlineShop">
        <activity
            android:name=".components.activities.SplashScreenActivity"
            android:theme="@style/Theme.TestOnlineShop.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".components.activities.MainActivity"
            android:theme="@style/Theme.TestOnlineShop">
        </activity>
        <activity android:name="com.skillbox.skillbox.cartscreen.presentation.CartScreenActivity" />
        <activity android:name="com.skillbox.skillbox.mainscreen.presentation.MainScreenActivity" />
        <activity android:name="com.skillbox.skillbox.detailsscreen.DetailsScreenActivity" />
    </application>

</manifest>